{# @var \ChameleonSystem\CmsDashboardBundle\Bridge\Chameleon\Dashboard\Widgets\DashboardWidgetInterface widget #}

<div class="card mb-4">
    <div class="card-body">
        <h1 class="display-5">{{ 'chameleon_system_cms_dashboard.dashboard'|trans }}</h1>
        <p class="lead">{{ cmsOwner }}</p>
    </div>
</div>

{% for widgetCollectionName, widgetCollection in widgetCollections %}
    <div class="row">
        {% set widgetCount = widgetCollection|length %}
        {% if widgetCount == 1 %}
            {% set colClass = 12 %}
        {% elseif widgetCount == 2 %}
            {% set colClass = 6 %}
        {% elseif widgetCount == 3 %}
            {% set colClass = 4 %}
        {% else %}
            {% set colClass = 12 %}
        {% endif %}

        {% for widgetData in widgetCollection %}
            {% set widget = widgetData.widget %}
            <div class="col-{{ colClass }}">
                <div class="card mb-4{% if widget.colorCssClass %} {{ widget.colorCssClass }}{% endif %}">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>{{ widget.title }}</span>
                        {% if widget.dropdownItems is not empty %}
                            <div class="dropdown dropleft">
                                <button class="btn btn-transparent p-0{% if widget.colorCssClass %} {{ widget.colorCssClass }}{% endif %}" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                                <div class="dropdown-menu">
                                    {% for dropdownItem in widget.dropdownItems %}
                                        <a class="dropdown-item" id="{{ dropdownItem.id }}" href="{{ dropdownItem.url }}">{{ dropdownItem.title }}</a>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                    <div class="card-body p-0">
                        {{ widget.bodyHtml|raw }}
                    </div>
                    {% if widget.footerHtml %}
                        <div class="card-footer p-0">
                            {{ widget.footerHtml|raw }}
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endfor %}