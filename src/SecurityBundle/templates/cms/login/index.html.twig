{% set bg = 'bg-splash' %}

{% extends 'BackendLayout/base.html.twig' %}

{% block header %}

{% endblock %}

{% block main_content %}
    <div class="card">
        <div class="card-header bg-dark text-white">
            <img class="img-fluid" src="{{ cmsGetPathTheme() }}/images/chameleon_logo.svg" alt="" />
        </div>
        <div class="card-body">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="text-center mt-1 m-3">
                <h1>Backend Login</h1>
            </div>

            <form name="cmsform" action="{{ path('cms_login') }}" method="post">
                <fieldset>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-user"></i></span></div>
                            <input class="form-control form-control-lg" placeholder="{{ 'chameleon_system_core.cms_module_login.form_user_name' | trans | e('html_attr') }}" type="text" id="username" name="_username" value="{{ last_username | e('html_attr') }}" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-unlock-alt"></i></span></div>
                            <input class="form-control form-control-lg" placeholder="{{ 'chameleon_system_core.cms_module_login.form_password' | trans | e('html_attr') }}" type="password" id="password" name="_password" />
                        </div>
                    </div>
                    <input class="btn btn-lg btn-dark btn-block" type="submit" value="{{ 'chameleon_system_core.cms_module_login.action_login' | trans | e('html_attr') }}">

                    {% if googleLoginUrl %}<a href="{{ googleLoginUrl |e('html_attr') }}" class="btn btn-md btn-info btn-block">{{ 'chameleon_system_core.security.action_login_google' | trans }}</a>{% endif %}
                </fieldset>
            </form>
        </div>
        <div class="card-footer">
            <span>&copy;&nbsp;&nbsp;<a href="https://www.esono.de" target="_blank">ESONO AG</a>&nbsp;&nbsp;{{ 'now'|date('Y') }}</span>
        </div>
    </div>
{% endblock %}

