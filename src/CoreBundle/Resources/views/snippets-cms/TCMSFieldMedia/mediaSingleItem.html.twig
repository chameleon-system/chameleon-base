{% trans_default_domain constant('ChameleonSystem\\CoreBundle\\i18n\\TranslationConstants::DOMAIN_BACKEND') %}

<div class="card bg-light">
    <div class="card-header p-0 cmsimagefielditemtitle">
        <div class="btn-group btn-group-sm" role="group">
            {% if bReadOnly == false %}
                {% if bImageSet %}
                    <button type="button" onclick="{{ sOpenWindowJSMediaDetail|e('html_attr') }}"
                            class="btn btn-secondary rounded-0"
                            data-toggle="tooltip" data-placement="top"
                            title="{{ 'chameleon_system_core.field_media.action_show_details'|trans|e('html_attr') }}">
                        <i class="fas fa-external-link-alt"></i>
                    </button>

                    <button type="button" onclick="window.open('{{ sImageURL|e('js') }}')"
                            class="btn btn-secondary rounded-0"
                            data-toggle="tooltip" data-placement="top"
                            title="{{ "chameleon_system_core.field_media.action_download_image"|trans|e('html_attr') }}">
                        <i class="far fa-save"></i>
                    </button>
                {% endif %}

                <button type="button" onclick="{{ sOpenWindowJSSetImage|e('html_attr') }}" class="btn btn-secondary rounded-0"
                        data-toggle="tooltip" data-placement="top"
                        title="{{ 'chameleon_system_core.field_media.action_assign_image'|trans|e('html_attr') }}">
                    <i class="far fa-image"></i>
                </button>

                <button type="button"
                        onclick="ClearImage('{{ sTableId|e('js') }}','{{ sRecordId|e('js') }}','{{ sFieldName|e('js') }}','{{ iPosition|e('js') }}')"
                        style="visibility: {{ sDeleteVisibleType }};"
                        id="cmsimagefielditem_clearbutton_{{ sFieldName|e('html_attr') }}{{ iPosition|e('html_attr') }}"
                        class="btn btn-secondary rounded-0"
                        data-toggle="tooltip" data-placement="top"
                        title="{{ 'chameleon_system_core.field_media.action_reset_image_assignment'|trans|e('html_attr') }}">
                    <i class="far fa-trash-alt"></i>
                </button>
            {% endif %}
        </div>
    </div>
    <div class="card-body p-0 text-center">
        <div class="cmsimagefielditemimage">
            <div id="cmsimagefielditem_noimagediv_{{ sFieldName|e('html_attr') }}{{ iPosition|e('html_attr') }}" class="noImageDiv"
                 style="display:none;">
                <img src="{{ emptyImageUrl|e('html_attr') }}" class="img-fluid" alt="">
            </div>
            <div id="cmsimagefielditem_imagediv_{{ sFieldName|e('html_attr') }}{{ iPosition|e('html_attr') }}" class="imageHolder" style="">
                {% include '/common/media/pkgCmsTextFieldImageResponsive.html.twig' %}
            </div>
        </div>
    </div>
</div>