<div id="exceptionContainer-{{ bundleName }}-{{ buildNumber }}" class="card card-accent-danger">
    <div class="card-header">
        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne"
                aria-expanded="false" aria-controls="collapseOne">
            <i class="fas fa-plus-square"></i> {{ 'chameleon_system_core.cms_module_update.error_messages'|trans }}
        </button>
        <span class="badge badge-pill badge-danger float-right">{{ messages|length }}</span>
    </div>
    <div class="card-body p-0">
        <ul class="queryList list-group" id="queryList-{{ bundleName }}-{{ buildNumber }}">
            {% for message in messages %}
                <li class="list-group-item"><a id="exception-{{ bundleName }}-{{ buildNumber }}-{{ loop.index0 }}"></a>
                    {{ 'chameleon_system_core.cms_module_update.error_message'|trans }}
                    <pre>{{ message.exception.message }}</pre>
                    <br/>
                    {{ 'chameleon_system_core.cms_module_update.file'|trans }} {{ message.exception.file }}<br/>
                    {{ 'chameleon_system_core.cms_module_update.line'|trans }} {{ message.exception.line }}<br/>
                    {{ 'chameleon_system_core.cms_module_update.exception_class'|trans }} {{ message.exceptionClass }}
                </li>
            {% endfor %}
        </ul>
    </div>
</div>