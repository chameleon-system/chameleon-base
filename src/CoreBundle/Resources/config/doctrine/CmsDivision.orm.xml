<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\CoreBundle\Entity\CmsDivision" table="cms_division">




        <id name="id" type="string" length="36" column="id" unique="true">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="doctrine.uuid_generator"/>
        </id>
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
        </field>
            <many-to-one field="cmsPortalId" target-entity="ChameleonSystem\CoreBundle\Entity\CmsPortal" inversed-by="cmsPortalDivisions">
    <join-column name="cms_portal_id" referenced-column-name="id" />
</many-to-one>
            <field name="name"  column="name"  nullable="false"  />
            <field name="cmsTreeIdTree"  column="cms_tree_id_tree"  nullable="false"  />
            <field name="cmsLanguageId" type="string" field="cms_language_id" length="36">
    <options>
        <option name="default"></option>
    </options>
</field>
<many-to-one field="cmsLanguage" target-entity="\ChameleonSystem\CoreBundle\Entity\CmsLanguage">
    <join-column name="cms_language_id" referenced-column-name="id" />
</many-to-one>
            <field type="array" name="images" column="images"  nullable="false"  />
            <field name="backgroundImageId" type="string" field="background_image_id" length="36">
    <options>
        <option name="default"></option>
    </options>
</field>
<many-to-one field="backgroundImage" target-entity="\ChameleonSystem\CoreBundle\Entity\CmsMedia">
    <join-column name="background_image_id" referenced-column-name="id" />
</many-to-one>
            <field name="colorPrimaryHexcolor"  column="color_primary_hexcolor"  nullable="false"  />
            <field name="colorSecondaryHexcolor"  column="color_secondary_hexcolor"  nullable="false"  />
            <field name="colorTertiaryHexcolor"  column="color_tertiary_hexcolor"  nullable="false"  />
            <field name="position"  column="position"  nullable="false"  />
            <field name="menuDirection"  column="menu_direction"  nullable="false"  />
            <field name="keywords"  column="keywords"  nullable="false"  />
            <field name="ivwCode"  column="ivw_code"  nullable="false"  />
            <field name="menuStopLevel"  column="menu_stop_level"  nullable="false"  />
    </entity>

</doctrine-mapping>