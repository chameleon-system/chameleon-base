<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\CoreBundle\Entity\PkgImageHotspotItemSpot" table="pkg_image_hotspot_item_spot">




        <id name="id" type="string" length="36" column="id" unique="true">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="doctrine.uuid_generator"/>
        </id>
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
        </field>
            <many-to-one field="pkgImageHotspotItemId" target-entity="ChameleonSystem\CoreBundle\Entity\PkgImageHotspotItem" inversed-by="pkgImageHotspotItemSpot">
    <join-column name="pkg_image_hotspot_item_id" referenced-column-name="id" />
</many-to-one>
            <field name="top"  column="top"  nullable="false"  />
            <field name="left"  column="left"  nullable="false"  />
            <field name="hotspotType"  column="hotspot_type"  nullable="false"  />
            <field name="linkedRecordId" type="string" field="linked_record_id" length="36">
    <options>
        <option name="default"></option>
    </options>
</field>
<many-to-one field="linkedRecord" target-entity="\ChameleonSystem\CoreBundle\Entity\ShopArticle">
    <join-column name="linked_record_id" referenced-column-name="id" />
</many-to-one>
            <field name="externalUrl"  column="external_url"  nullable="false"  />
            <field name="polygonArea"  column="polygon_area"  nullable="false"  />
            <field name="showSpot"  column="show_spot"  nullable="false"  />
    </entity>

</doctrine-mapping>