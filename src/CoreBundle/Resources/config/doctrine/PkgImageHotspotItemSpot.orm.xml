            <field name="top" type="string" column="top" length="255" nullable="false"  />
            <field name="left" type="string" column="left" length="255" nullable="false"  />
            <many-to-one field="linkedRec" target-entity="\ChameleonSystem\CoreBundle\Entity\ShopArticle">
    <join-column name="linked_record" referenced-column-name="id" />
</many-to-one>
            <field name="externalUrl" type="string" column="external_url" length="255" nullable="false"  />
    </entity>

</doctrine-mapping>