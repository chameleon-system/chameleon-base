<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\CoreBundle\Entity\ShopArticleStats" table="shop_article_stats">




        <id name="id" type="string" length="36" column="id" unique="true" />
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
        </field>
            <many-to-one field="shopArticle" target-entity="\ChameleonSystem\CoreBundle\Entity\ShopArticle" inversed-by="shopArticleStatsCollection" >
    <join-column name="shop_article_id" referenced-column-name="id" />
</many-to-one>
            <field name="statsSales" type="string" column="stats_sales" length="255" nullable="false"  />
            <field name="statsDetailViews" type="string" column="stats_detail_views" length="255" nullable="false"  />
            <field name="statsReviewCount" type="string" column="stats_review_count" length="255" nullable="false"  />
    </entity>

</doctrine-mapping>