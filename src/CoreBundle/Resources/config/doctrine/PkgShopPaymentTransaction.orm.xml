<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\CoreBundle\Entity\PkgShopPaymentTransaction" table="pkg_shop_payment_transaction">




        <id name="id" type="string" length="36" column="id" unique="true" />
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
        </field>
            <many-to-one field="shopOrder" target-entity="\ChameleonSystem\CoreBundle\Entity\ShopOrder" inversed-by="pkgShopPaymentTransactionCollection" >
    <join-column name="shop_order_id" referenced-column-name="id" />
</many-to-one>
            <one-to-many field="pkgShopPaymentTransactionPositionCollection" target-entity="\ChameleonSystem\CoreBundle\Entity\PkgShopPaymentTransactionPosition" mapped-by="pkgShopPaymentTransaction" orphan-removal="true">
    <cascade-persist/>
</one-to-many>

            <field name="ip" type="string" column="ip" length="255" nullable="false"  />
            <field name="context" type="string" column="context" length="255" nullable="false"  />
            <field name="sequenceNumber" type="string" column="sequence_number" length="255" nullable="false"  />
    </entity>

</doctrine-mapping>