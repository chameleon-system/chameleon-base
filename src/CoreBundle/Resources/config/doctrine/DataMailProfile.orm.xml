<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\CoreBundle\Entity\DataMailProfile" table="data_mail_profile">




        <id name="id" type="string" length="36" column="id" unique="true">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="doctrine.uuid_generator"/>
        </id>
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
        </field>
            <field name="idcode"  column="idcode"  nullable="false"  />
            <field name="name"  column="name"  nullable="false"  />
            <field name="subject"  column="subject"  nullable="false"  />
            <field name="mailto"  column="mailto"  nullable="false"  />
            <field name="mailtoName"  column="mailto_name"  nullable="false"  />
            <field name="mailfrom"  column="mailfrom"  nullable="false"  />
            <field name="mailfromName"  column="mailfrom_name"  nullable="false"  />
            <field name="mailbcc"  column="mailbcc"  nullable="false"  />
            <field name="body"  column="body"  nullable="false"  />
            <field name="bodyText"  column="body_text"  nullable="false"  />
            <many-to-many field="attachment" target-entity="ChameleonSystem\CoreBundle\Entity\CmsDocument">
    <join-table name="data_mail_profile_attachment_cms_document_mlt">
        <join-columns>
            <join-column name="source_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
            <join-column name="target_id" referenced-column-name="id"/>
        </inverse-join-columns>
    </join-table>
</many-to-many>
            <field name="template"  column="template"  nullable="false"  />
            <field name="templateText"  column="template_text"  nullable="false"  />
            <field name="cmsPortalId" type="string" field="cms_portal_id" length="36">
    <options>
        <option name="default"></option>
    </options>
</field>
<many-to-one field="cmsPortal" target-entity="\ChameleonSystem\CoreBundle\Entity\CmsPortal">
    <join-column name="cms_portal_id" referenced-column-name="id" />
</many-to-one>
    </entity>

</doctrine-mapping>