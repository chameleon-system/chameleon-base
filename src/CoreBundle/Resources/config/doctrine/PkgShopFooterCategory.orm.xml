<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\CoreBundle\Entity\PkgShopFooterCategory" table="pkg_shop_footer_category">




        <id name="id" type="string" length="36" column="id" unique="true">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="doctrine.uuid_generator"/>
        </id>
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
        </field>
            <field name="name"  column="name"  nullable="false"  />
            <field name="shopCategoryId" type="string" field="shop_category_id" length="36">
    <options>
        <option name="default"></option>
    </options>
</field>
<many-to-one field="shopCategory" target-entity="\ChameleonSystem\CoreBundle\Entity\ShopCategory">
    <join-column name="shop_category_id" referenced-column-name="id" />
</many-to-one>
            <field name="sortOrder"  column="sort_order"  nullable="false"  />
            <many-to-one field="shopId" target-entity="ChameleonSystem\CoreBundle\Entity\Shop" inversed-by="pkgShopFooterCategory">
    <join-column name="shop_id" referenced-column-name="id" />
</many-to-one>
    </entity>

</doctrine-mapping>