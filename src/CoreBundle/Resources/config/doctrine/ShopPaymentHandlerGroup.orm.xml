<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\CoreBundle\Entity\ShopPaymentHandlerGroup" table="shop_payment_handler_group">




        <id name="id" type="string" length="36" column="id" unique="true">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="doctrine.uuid_generator"/>
        </id>
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
        </field>
            <field name="classname"  column="classname"  nullable="false"  />
            <one-to-many field="shopPaymentHandlerGroupConfigCollection" target-entity="ChameleonSystem\CoreBundle\Entity\ShopPaymentHandlerGroupConfig" mapped-by="shopPaymentHandlerGroupId" />

            <field name="ipnGroupIdentifier"  column="ipn_group_identifier"  nullable="false"  />
            <field name="ipnPayloadCharacterCharset"  column="ipn_payload_character_charset"  nullable="false"  />
            <one-to-many field="pkgShopPaymentIpnStatusCollection" target-entity="ChameleonSystem\CoreBundle\Entity\PkgShopPaymentIpnStatus" mapped-by="shopPaymentHandlerGroupId" />

            <field name="name"  column="name"  nullable="false"  />
            <field name="systemName"  column="system_name"  nullable="false"  />
            <field name="description"  column="description"  nullable="false"  />
            <one-to-many field="shopPaymentHandlerCollection" target-entity="ChameleonSystem\CoreBundle\Entity\ShopPaymentHandler" mapped-by="shopPaymentHandlerGroupId" />

            <one-to-many field="shopPaymentMethodCollection" target-entity="ChameleonSystem\CoreBundle\Entity\ShopPaymentMethod" mapped-by="shopPaymentHandlerGroupId" />

            <field name="ipnAllowedIps"  column="ipn_allowed_ips"  nullable="false"  />
            <one-to-many field="pkgShopPaymentIpnTriggerCollection" target-entity="ChameleonSystem\CoreBundle\Entity\PkgShopPaymentIpnTrigger" mapped-by="shopPaymentHandlerGroupId" />

            <one-to-many field="pkgShopPaymentIpnMessageCollection" target-entity="ChameleonSystem\CoreBundle\Entity\PkgShopPaymentIpnMessage" mapped-by="shopPaymentHandlerGroupId" />

            <field name="environment"  column="environment"  nullable="false"  />
    </entity>

</doctrine-mapping>