<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\CoreBundle\Entity\AmazonPaymentIdMapping" table="amazon_payment_id_mapping">




        <id name="id" type="string" length="36" column="id" unique="true">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="doctrine.uuid_generator"/>
        </id>
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
        </field>
            <many-to-one field="shopOrderId" target-entity="ChameleonSystem\CoreBundle\Entity\ShopOrder" inversed-by="amazonPaymentIdMapping">
    <join-column name="shop_order_id" referenced-column-name="id" />
</many-to-one>
            <field name="amazonOrderReferenceId"  column="amazon_order_reference_id"  nullable="false"  />
            <field name="localId"  column="local_id"  nullable="false"  />
            <field name="amazonId"  column="amazon_id"  nullable="false"  />
            <field name="value"  column="value"  nullable="false"  />
            <field name="type"  column="type"  nullable="false"  />
            <field name="requestMode"  column="request_mode"  nullable="false"  />
            <field name="captureNow"  column="capture_now"  nullable="false"  />
            <field name="pkgShopPaymentTransactionId" type="string" field="pkg_shop_payment_transaction_id" length="36">
    <options>
        <option name="default"></option>
    </options>
</field>
<many-to-one field="pkgShopPaymentTransaction" target-entity="\ChameleonSystem\CoreBundle\Entity\PkgShopPaymentTransaction">
    <join-column name="pkg_shop_payment_transaction_id" referenced-column-name="id" />
</many-to-one>
    </entity>

</doctrine-mapping>