<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\CoreBundle\Entity\AmazonPaymentIdMapping" table="amazon_payment_id_mapping">




        <id name="id" type="string" length="36" column="id" unique="true" />
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
        </field>
            <many-to-one field="shopOrder" target-entity="\ChameleonSystem\CoreBundle\Entity\ShopOrder" inversed-by="amazonPaymentIdMappingCollection" >
    <join-column name="shop_order_id" referenced-column-name="id" />
</many-to-one>
            <field name="amazonOrderReferenceId" type="string" column="amazon_order_reference_id" length="32" nullable="false"  />
            <field name="localId" type="string" column="local_id" length="32" nullable="false"  />
            <field name="amazonId" type="string" column="amazon_id" length="32" nullable="false"  />
            <field name="type" type="string" column="type" length="255" nullable="false"  />
            <field name="requestMode" type="string" column="request_mode" length="255" nullable="false"  />
            <many-to-one field="pkgShopPaymentTransaction" target-entity="\ChameleonSystem\CoreBundle\Entity\PkgShopPaymentTransaction">
    <join-column name="pkg_shop_payment_transaction_id" referenced-column-name="id" />
</many-to-one>
    </entity>

</doctrine-mapping>