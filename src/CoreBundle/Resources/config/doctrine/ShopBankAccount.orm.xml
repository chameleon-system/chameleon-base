<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\CoreBundle\Entity\ShopBankAccount" table="shop_bank_account">




        <id name="id" type="string" length="36" column="id" unique="true">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="doctrine.uuid_generator"/>
        </id>
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
        </field>
            <many-to-one field="shopId" target-entity="ChameleonSystem\CoreBundle\Entity\Shop" inversed-by="shopBankAccount">
    <join-column name="shop_id" referenced-column-name="id" />
</many-to-one>
            <field name="name"  column="name"  nullable="false"  />
            <field name="accountOwner"  column="account_owner"  nullable="false"  />
            <field name="bankname"  column="bankname"  nullable="false"  />
            <field name="bankcode"  column="bankcode"  nullable="false"  />
            <field name="accountNumber"  column="account_number"  nullable="false"  />
            <field name="bicCode"  column="bic_code"  nullable="false"  />
            <field name="ibannumber"  column="ibannumber"  nullable="false"  />
            <field name="position"  column="position"  nullable="false"  />
    </entity>

</doctrine-mapping>