<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\CoreBundle\Entity\ShopStockMessage" table="shop_stock_message">




        <id name="id" type="string" length="36" column="id" unique="true">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="doctrine.uuid_generator"/>
        </id>
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
        </field>
            <field name="className"  column="class_name"  nullable="false"  />
            <field name="classSubtype"  column="class_subtype"  nullable="false"  />
            <field name="classType"  column="class_type"  nullable="false"  />
            <many-to-one field="shopId" target-entity="ChameleonSystem\CoreBundle\Entity\Shop" inversed-by="shopStockMessage">
    <join-column name="shop_id" referenced-column-name="id" />
</many-to-one>
            <field name="identifier"  column="identifier"  nullable="false"  />
            <field name="class"  column="class"  nullable="false"  />
            <field name="name"  column="name"  nullable="false"  />
            <field name="internalName"  column="internal_name"  nullable="false"  />
            <one-to-many field="shopStockMessageTriggerCollection" target-entity="ChameleonSystem\CoreBundle\Entity\ShopStockMessageTrigger" mapped-by="shopStockMessageId" />

            <field name="autoDeactivateOnZeroStock"  column="auto_deactivate_on_zero_stock"  nullable="false"  />
            <field name="autoActivateOnStock"  column="auto_activate_on_stock"  nullable="false"  />
            <field name="googleAvailability"  column="google_availability"  nullable="false"  />
    </entity>

</doctrine-mapping>