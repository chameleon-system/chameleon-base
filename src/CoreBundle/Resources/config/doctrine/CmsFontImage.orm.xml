<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\CoreBundle\Entity\CmsFontImage" table="cms_font_image">




        <id name="id" type="string" length="36" column="id" unique="true">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="doctrine.uuid_generator"/>
        </id>
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
        </field>
            <field name="name"  column="name"  nullable="false"  />
            <field name="profileName"  column="profile_name"  nullable="false"  />
            <field name="imgHeight"  column="img_height"  nullable="false"  />
            <field name="imgWidth"  column="img_width"  nullable="false"  />
            <field name="imgBackgroundColor"  column="img_background_color"  nullable="false"  />
            <field name="fontColor"  column="font_color"  nullable="false"  />
            <field name="fontSize"  column="font_size"  nullable="false"  />
            <field name="fontWeight"  column="font_weight"  nullable="false"  />
            <field name="fontAlign"  column="font_align"  nullable="false"  />
            <field name="fontVerticalAlign"  column="font_vertical_align"  nullable="false"  />
            <field name="fontFilename"  column="font_filename"  nullable="false"  />
            <field name="imgType"  column="img_type"  nullable="false"  />
            <field name="imgBackgroundImg"  column="img_background_img"  nullable="false"  />
            <field name="backgroundImgFile"  column="background_img_file"  nullable="false"  />
            <field name="textPositionX"  column="text_position_x"  nullable="false"  />
            <field name="textPositionY"  column="text_position_y"  nullable="false"  />
    </entity>

</doctrine-mapping>