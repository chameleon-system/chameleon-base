<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\CoreBundle\Entity\ShopArticle" table="shop_article">




        <id name="id" type="string" length="36" column="id" unique="true" />
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
        </field>
            <field name="name" type="string" column="name" length="255" nullable="false"  />
            <field name="seoPattern" type="string" column="seo_pattern" length="255" nullable="false"  />
            <field name="articlenumber" type="string" column="articlenumber" length="255" nullable="false"  />
            <one-to-many field="shopArticleImageCollection" target-entity="\ChameleonSystem\CoreBundle\Entity\ShopArticleImage" mapped-by="shopArticle" orphan-removal="true">
    <cascade-persist/>
</one-to-many>

            <one-to-many field="shopArticlePreviewImageCollection" target-entity="\ChameleonSystem\CoreBundle\Entity\ShopArticlePreviewImage" mapped-by="shopArticle" orphan-removal="true">
    <cascade-persist/>
</one-to-many>

            <one-to-many field="shopArticleDocumentCollection" target-entity="\ChameleonSystem\CoreBundle\Entity\ShopArticleDocument" mapped-by="shopArticle" orphan-removal="true">
    <cascade-persist/>
</one-to-many>

            <field name="listRank" type="string" column="list_rank" length="255" nullable="false"  />
            <one-to-many field="shopArticleStockCollection" target-entity="\ChameleonSystem\CoreBundle\Entity\ShopArticleStock" mapped-by="shopArticle" orphan-removal="true">
    <cascade-persist/>
</one-to-many>

            <one-to-many field="shopArticleContributorCollection" target-entity="\ChameleonSystem\CoreBundle\Entity\ShopArticleContributor" mapped-by="shopArticle" orphan-removal="true">
    <cascade-persist/>
</one-to-many>

            <field name="subtitle" type="string" column="subtitle" length="255" nullable="false"  />
            <field name="usp" type="string" column="usp" length="255" nullable="false"  />
            <field name="stars" type="string" column="stars" length="255" nullable="false"  />
            <one-to-many field="shopArticleReviewCollection" target-entity="\ChameleonSystem\CoreBundle\Entity\ShopArticleReview" mapped-by="shopArticle" orphan-removal="true">
    <cascade-persist/>
</one-to-many>

            <one-to-many field="shopBundleArticleCollection" target-entity="\ChameleonSystem\CoreBundle\Entity\ShopBundleArticle" mapped-by="shopArticle" orphan-removal="true">
    <cascade-persist/>
</one-to-many>

            <field name="nameVariantInfo" type="string" column="name_variant_info" length="255" nullable="false"  />
            <many-to-one field="variantParent" target-entity="\ChameleonSystem\CoreBundle\Entity\ShopArticle" inversed-by="shopArticleVariantsCollection" >
    <join-column name="variant_parent_id" referenced-column-name="id" />
</many-to-one>
            <one-to-many field="shopArticleVariantsCollection" target-entity="\ChameleonSystem\CoreBundle\Entity\ShopArticle" mapped-by="variantParent" orphan-removal="true">
    <cascade-persist/>
</one-to-many>

            <field name="metaKeywords" type="string" column="meta_keywords" length="255" nullable="false"  />
            <field name="metaDescription" type="string" column="meta_description" length="255" nullable="false"  />
            <one-to-many field="shopArticleStatsCollection" target-entity="\ChameleonSystem\CoreBundle\Entity\ShopArticleStats" mapped-by="shopArticle" orphan-removal="true">
    <cascade-persist/>
</one-to-many>

    </entity>

</doctrine-mapping>