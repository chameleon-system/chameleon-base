<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\CoreBundle\Entity\ShopOrderStatusItem" table="shop_order_status_item">




        <id name="id" type="string" length="36" column="id" unique="true">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="doctrine.uuid_generator"/>
        </id>
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
        </field>
            <many-to-one field="shopOrderStatusId" target-entity="ChameleonSystem\CoreBundle\Entity\ShopOrderStatus" inversed-by="shopOrderStatusItem">
    <join-column name="shop_order_status_id" referenced-column-name="id" />
</many-to-one>
            <field name="shopOrderItemId" type="string" field="shop_order_item_id" length="36">
    <options>
        <option name="default"></option>
    </options>
</field>
<many-to-one field="shopOrderItem" target-entity="\ChameleonSystem\CoreBundle\Entity\ShopOrderItem">
    <join-column name="shop_order_item_id" referenced-column-name="id" />
</many-to-one>
            <field name="amount"  column="amount"  nullable="false"  />
    </entity>

</doctrine-mapping>