<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="\ChameleonSystem\CoreBundle\Entity\PkgComment" table="pkg_comment">




        <id name="id" type="uuid" column="id" unique="true">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="doctrine.uuid_generator"/>
        </id>
        <id name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
        </id>
            <field name="pkgCommentTypeId" column="pkg_comment_type_id" type="string"  nullable="false"  />
            <field name="itemId" column="item_id" type="string" length="36" nullable="false"  />
            <field name="dataExtranetUserId" column="data_extranet_user_id" type="string"  nullable="false"  />
            <field name="createdTimestamp" column="created_timestamp" type="string"  nullable="false"  />
            <field name="comment" column="comment" type="string"  nullable="false"  />
            <field name="pkgCommentId" column="pkg_comment_id" type="string"  nullable="false"  />
            <field name="markAsDeleted" column="mark_as_deleted" type="string"  nullable="false"  />
            <field name="markAsReported" column="mark_as_reported" type="string"  nullable="false"  />
    </entity>

</doctrine-mapping>